@model CLCMilestone.Models.BoardModel
@if (Model.size == 0)
{
<h1>Minesweeper</h1>
                <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetGameBoard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="size" class="control-label"></label>
                <input asp-for="size" type="number" class="form-control" />
                <span asp-validation-for="size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="difficulty" class="control-label"></label>
                <input asp-for="difficulty" type="number" class="form-control" />
                <span asp-validation-for="difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="New Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} } } else {
<div id="game-board">
    @Html.Partial("Board.cshtml")
</div>
<br />

<form asp-action="SetGameBoard">
    <div class="form-group">
        <input type="submit" value="Restart" class="btn btn-primary" />
    </div>
</form>
}
